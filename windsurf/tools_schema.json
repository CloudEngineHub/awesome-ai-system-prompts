{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Cascade Tool Schemas",
    "type": "object",
    "properties": {
      "browser_preview": {
        "type": "object",
        "properties": {
          "Name": { "type": "string" },
          "Url": { "type": "string", "format": "uri" }
        },
        "required": ["Name", "Url"],
        "additionalProperties": false
      },
      "check_deploy_status": {
        "type": "object",
        "properties": {
          "WindsurfDeploymentId": { "type": "string" },
          "OutputCharacterCount": { "type": "integer" },
          "OutputPriority": { "type": "string", "enum": ["top", "bottom", "split"] },
          "WaitDurationSeconds": { "type": "integer" }
        },
        "required": ["WindsurfDeploymentId", "OutputCharacterCount", "OutputPriority", "WaitDurationSeconds"],
        "additionalProperties": false
      },
      "codebase_search": {
        "type": "object",
        "properties": {
          "Query": { "type": "string" },
          "TargetDirectories": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["Query", "TargetDirectories"],
        "additionalProperties": false
      },
      "create_memory": {
        "type": "object",
        "properties": {
          "Action": { "type": "string", "enum": ["create", "update", "delete"] },
          "Content": { "type": "string" },
          "CorpusNames": { "type": "array", "items": { "type": "string" } },
          "Id": { "type": "string" },
          "Tags": { "type": "array", "items": { "type": "string" } },
          "Title": { "type": "string" },
          "UserTriggered": { "type": "boolean" }
        },
        "required": ["Action", "Title"],
        "additionalProperties": false
      },
      "deploy_web_app": {
        "type": "object",
        "properties": {
          "Framework": {
            "type": "string",
            "enum": [
              "eleventy", "angular", "astro", "create-react-app", "gatsby", "gridsome", "grunt", "hexo", "hugo", "hydrogen", "jekyll", "middleman", "mkdocs", "nextjs", "nuxtjs", "remix", "sveltekit", "svelte"
            ]
          },
          "ProjectId": { "type": "string" },
          "ProjectPath": { "type": "string" },
          "Subdomain": { "type": "string" }
        },
        "required": ["Framework", "ProjectPath"],
        "additionalProperties": false
      },
      "edit_file": {
        "type": "object",
        "properties": {
          "CodeEdit": { "type": "string" },
          "CodeMarkdownLanguage": { "type": "string" },
          "Instruction": { "type": "string" },
          "TargetFile": { "type": "string" },
          "TargetLintErrorIds": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["CodeEdit", "CodeMarkdownLanguage", "Instruction", "TargetFile"],
        "additionalProperties": false
      },
      "find_by_name": {
        "type": "object",
        "properties": {
          "Excludes": { "type": "array", "items": { "type": "string" } },
          "Extensions": { "type": "array", "items": { "type": "string" } },
          "FullPath": { "type": "boolean" },
          "MaxDepth": { "type": "integer" },
          "Pattern": { "type": "string" },
          "SearchDirectory": { "type": "string" },
          "Type": { "type": "string", "enum": ["file", "directory", "any"] }
        },
        "required": ["SearchDirectory"],
        "additionalProperties": false
      },
      "grep_search": {
        "type": "object",
        "properties": {
          "CaseInsensitive": { "type": "boolean" },
          "Includes": { "type": "array", "items": { "type": "string" } },
          "MatchPerLine": { "type": "boolean" },
          "Query": { "type": "string" },
          "SearchPath": { "type": "string" }
        },
        "required": ["CaseInsensitive", "MatchPerLine", "Query", "SearchPath"],
        "additionalProperties": false
      }
      ,
      "list_dir": {
        "type": "object",
        "properties": {
          "DirectoryPath": { "type": "string" }
        },
        "required": ["DirectoryPath"],
        "additionalProperties": false
      },
      "run_command": {
        "type": "object",
        "properties": {
          "Blocking": { "type": "boolean" },
          "CommandLine": { "type": "string" },
          "Cwd": { "type": "string" },
          "SafeToAutoRun": { "type": "boolean" },
          "WaitMsBeforeAsync": { "type": "integer" }
        },
        "required": ["Blocking", "CommandLine", "Cwd"],
        "additionalProperties": false
      },
      "search_in_file": {
        "type": "object",
        "properties": {
          "AbsolutePath": { "type": "string" },
          "Query": { "type": "string" }
        },
        "required": ["AbsolutePath", "Query"],
        "additionalProperties": false
      },
      "view_code_item": {
        "type": "object",
        "properties": {
          "File": { "type": "string" },
          "NodePath": { "type": "string" }
        },
        "required": ["NodePath"],
        "additionalProperties": false
      },
      "view_file_outline": {
        "type": "object",
        "properties": {
          "AbsolutePath": { "type": "string" },
          "ItemOffset": { "type": "integer" }
        },
        "required": ["AbsolutePath", "ItemOffset"],
        "additionalProperties": false
      },
      "view_line_range": {
        "type": "object",
        "properties": {
          "AbsolutePath": { "type": "string" },
          "EndLine": { "type": "integer" },
          "StartLine": { "type": "integer" }
        },
        "required": ["AbsolutePath", "EndLine", "StartLine"],
        "additionalProperties": false
      },
      "write_to_file": {
        "type": "object",
        "properties": {
          "CodeContent": { "type": "string" },
          "EmptyFile": { "type": "boolean" },
          "TargetFile": { "type": "string" }
        },
        "required": ["TargetFile"],
        "additionalProperties": false
      },
      "read_deployment_config": {
        "type": "object",
        "properties": {
          "ProjectPath": { "type": "string" }
        },
        "required": ["ProjectPath"],
        "additionalProperties": false
      },
      "read_url_content": {
        "type": "object",
        "properties": {
          "Url": { "type": "string", "format": "uri" }
        },
        "required": ["Url"],
        "additionalProperties": false
      },
      "search_web": {
        "type": "object",
        "properties": {
          "domain": { "type": "string" },
          "query": { "type": "string" }
        },
        "required": ["query"],
        "additionalProperties": false
      },
      "suggested_responses": {
        "type": "object",
        "properties": {
          "Suggestions": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["Suggestions"],
        "additionalProperties": false
      },
      "view_web_document_content_chunk": {
        "type": "object",
        "properties": {
          "position": { "type": "integer" },
          "url": { "type": "string", "format": "uri" }
        },
        "required": ["position", "url"],
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
  
  